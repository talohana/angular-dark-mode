{
  "name": "angular-dark-mode-library",
  "version": "0.0.0-development",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/talohana/angular-dark-mode"
  },
  "scripts": {
    "ng": "ng",
    "start:app": "ng serve angular-dark-mode-app",
    "build:lib": "ng build --configuration production angular-dark-mode",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:ci": "jest --config jest.config.js --runInBand",
    "commit": "git-cz",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "copy-files": "cp -t dist/angular-dark-mode README.md LICENSE",
    "package": "run-s clean build:lib copy-files",
    "clean": "rimraf dist",
    "semantic-release": "semantic-release",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "~17.1.2",
    "@angular/common": "~17.1.2",
    "@angular/compiler": "~17.1.2",
    "@angular/core": "~17.1.2",
    "@angular/forms": "~17.1.2",
    "@angular/platform-browser": "~17.1.2",
    "@angular/platform-browser-dynamic": "~17.1.2",
    "@angular/router": "~17.1.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.1.2",
    "@angular/cli": "~17.1.2",
    "@angular/compiler-cli": "~17.1.2",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "@types/jest-when": "^3.5.5",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "all-contributors-cli": "^6.26.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "jest-marbles": "^3.0.6",
    "jest-preset-angular": "^14.0.0",
    "jest-when": "^3.6.0",
    "lint-staged": "^15.2.2",
    "ng-packagr": "^17.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "ts-node": "~10.9.2",
    "typescript": "~5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
